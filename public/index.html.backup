    async function loadMarkdownContent(path) {
      currentMarkdownPath = path;
      isEditing = false;
      renderMarkdownFileList(); // Update active state

      const viewer = document.getElementById('markdownViewer');
      viewer.innerHTML = '<div class="markdown-empty"><div class="markdown-empty-icon"></div><p>Loading...</p></div>';

      try {
        const res = await fetch(`/api/markdown?path=${encodeURIComponent(path)}`, { credentials: 'same-origin' });
        if (!res.ok) throw new Error('Failed to load');
        const data = await res.json();

        currentMarkdownContent = data.content;
        const modified = new Date(data.modified).toLocaleString();
        const size = formatSize(data.size);
        const isSkillFile = path.startsWith('skills/');

        viewer.innerHTML = `
          <div class="markdown-viewer-header">
            <div class="markdown-viewer-info">
              <div class="markdown-viewer-title">${getFileIcon(path.split('/').pop())} ${path.split('/').pop()}</div>
