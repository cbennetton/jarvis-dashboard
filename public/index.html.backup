      color: var(--danger);
    }

    .no-subagents {
      text-align: center;
      padding: 20px;
      color: var(--text-muted);
      font-size: 13px;
    }

    /* Responsive enhanced status */
    @media (max-width: 768px) {
      .enhanced-status-card { padding: 16px; border-radius: 16px; }
      
      .main-agent-status {
        flex-direction: column;
        text-align: center;
        padding: 16px;
        gap: 12px;
      }
      
      .agent-avatar { width: 56px; height: 56px; font-size: 28px; }
      .agent-name { justify-content: center; font-size: 16px; }
      .agent-task { white-space: normal; text-align: center; }
      
      .agent-stats {
        width: 100%;
        justify-content: center;
        padding-top: 12px;
