    function formatScheduleCompact(schedule) {
      if (!schedule) return { time: 'Not set', frequency: 'Daily' };
      const time = schedule.time || 'Unknown';
      const tz = schedule.timezone || 'UTC';
      // Parse cron to determine frequency
      const cron = schedule.cron || '0 9 * * *';
      const parts = cron.split(' ');
      let frequency = 'Daily';
      if (parts.length >= 5) {
        const dayOfWeek = parts[4];
        const dayOfMonth = parts[2];
        if (dayOfWeek !== '*' && dayOfWeek !== '?') {
          frequency = 'Weekly';
        } else if (dayOfMonth !== '*' && dayOfMonth !== '?') {
          frequency = 'Monthly';
        }
      }
      return { time: `${time}`, frequency: `${frequency}  ${tz}` };
    }

    function formatLastSent(timestamp) {
      const date = new Date(timestamp);
      const now = new Date();
      const diffMs = now - date;
      const diffDays = Math.floor(diffMs / (1000 * 60 * 60 * 24));
      
      if (diffDays === 0) {
        return 'Sent today';
      } else if (diffDays === 1) {
        return 'Sent yesterday';
      } else if (diffDays < 7) {
        return `Sent ${diffDays}d ago`;
      } else {
        return date.toLocaleDateString('en-US', { month: 'short', day: 'numeric' });
      }
    }

    function formatSchedule(schedule) {
      if (!schedule) return 'Not configured';
      const time = schedule.time || 'Unknown time';
      const tz = schedule.timezone || 'UTC';
      return `${time} (${tz})`;
    }

    function timeToCron(time) {
      if (!time) return '0 9 * * *';
      const [hours, minutes] = time.split(':');
      return `${parseInt(minutes)} ${parseInt(hours)} * * *`;
    }

    function cronToTime(cron) {
      if (!cron) return '09:00';
      const parts = cron.split(' ');
      if (parts.length < 2) return '09:00';
      const minutes = parts[0].padStart(2, '0');
      const hours = parts[1].padStart(2, '0');
      return `${hours}:${minutes}`;
    }

