    /* ==================== NEWSLETTERS PAGE ==================== */
    .page-header-actions {
      display: flex;
      gap: 12px;
      align-items: center;
    }

    .add-btn {
      background: var(--accent);
      border: none;
      color: white;
      padding: 8px 16px;
      border-radius: 8px;
      cursor: pointer;
      font-size: 13px;
      display: flex;
      align-items: center;
      gap: 8px;
      transition: all 0.2s;
      font-weight: 500;
    }
    .add-btn:hover { transform: translateY(-2px); box-shadow: 0 8px 24px var(--accent-glow); }

    .newsletters-container {
      display: grid;
      gap: 12px;
      max-height: calc(100vh - 200px);
      overflow-y: auto;
      padding-right: 4px;
    }

    /* Compact Newsletter Card */
    .newsletter-card {
      background: var(--bg-card);
      backdrop-filter: blur(20px);
      border: 1px solid var(--border);
      border-radius: 16px;
      padding: 16px 20px;
      transition: all 0.3s ease;
      cursor: pointer;
      position: relative;
      overflow: hidden;
    }
    .newsletter-card:hover { 
      border-color: rgba(255,255,255,0.15); 
      background: rgba(255, 255, 255, 0.04);
    }
    .newsletter-card.disabled { opacity: 0.6; }
    .newsletter-card.expanded { cursor: default; }

    /* Accent bar at top */
    .newsletter-card::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      height: 3px;
      background: var(--accent);
      opacity: 0.7;
    }
    .newsletter-card.disabled::before {
      background: var(--inactive);
    }

    /* Compact Header - Always Visible */
    .newsletter-compact {
      display: flex;
      align-items: center;
      gap: 16px;
    }

    .newsletter-icon {
      font-size: 28px;
      flex-shrink: 0;
    }

    .newsletter-main-info {
      flex: 1;
      min-width: 0;
    }

    .newsletter-name {
      font-size: 15px;
      font-weight: 600;
      margin-bottom: 2px;
      white-space: nowrap;
      overflow: hidden;
      text-overflow: ellipsis;
    }

    .newsletter-email {
      color: var(--text-muted);
      font-size: 13px;
      white-space: nowrap;
      overflow: hidden;
      text-overflow: ellipsis;
    }

    .newsletter-schedule-compact {
      display: flex;
      flex-direction: column;
      align-items: flex-end;
      gap: 2px;
      flex-shrink: 0;
    }

    .newsletter-schedule-time {
      font-size: 14px;
      font-weight: 500;
      color: var(--text-primary);
    }

    .newsletter-schedule-freq {
      font-size: 11px;
      color: var(--text-muted);
    }

    .newsletter-compact-right {
      display: flex;
      align-items: center;
      gap: 12px;
      flex-shrink: 0;
    }

    .newsletter-last-sent {
      font-size: 11px;
      color: var(--text-muted);
      text-align: right;
      max-width: 100px;
    }

    .newsletter-toggle {
      position: relative;
      width: 44px;
      height: 24px;
      background: var(--inactive);
      border-radius: 12px;
      cursor: pointer;
      transition: all 0.3s;
      flex-shrink: 0;
    }
    .newsletter-toggle.enabled { background: var(--accent); }
    .newsletter-toggle::after {
      content: '';
      position: absolute;
      width: 20px;
      height: 20px;
      background: white;
      border-radius: 50%;
      top: 2px;
      left: 2px;
      transition: all 0.3s;
    }
    .newsletter-toggle.enabled::after { left: 22px; }

    .newsletter-expand-icon {
      font-size: 12px;
      color: var(--text-muted);
      transition: transform 0.3s ease;
      flex-shrink: 0;
    }
    .newsletter-card.expanded .newsletter-expand-icon {
      transform: rotate(180deg);
    }

    /* Expand hint on hover */
    .newsletter-expand-hint {
      position: absolute;
      bottom: 4px;
      left: 50%;
      transform: translateX(-50%);
      font-size: 10px;
      color: var(--text-muted);
      opacity: 0;
      transition: opacity 0.2s;
    }
    .newsletter-card:hover .newsletter-expand-hint { opacity: 1; }
    .newsletter-card.expanded .newsletter-expand-hint { display: none; }

    /* Expanded Details */
    .newsletter-details {
      display: none;
      margin-top: 16px;
      padding-top: 16px;
      border-top: 1px solid var(--border);
      animation: slideDown 0.3s ease;
    }
    .newsletter-card.expanded .newsletter-details { display: block; }

    @keyframes slideDown {
      from { opacity: 0; transform: translateY(-10px); }
      to { opacity: 1; transform: translateY(0); }
    }

    .newsletter-details-grid {
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      gap: 10px;
      margin-bottom: 16px;
    }

    .newsletter-detail-item {
      background: var(--bg-secondary);
      padding: 10px 12px;
      border-radius: 8px;
    }

    .newsletter-detail-label {
      font-size: 10px;
      text-transform: uppercase;
      letter-spacing: 0.5px;
      color: var(--text-muted);
      margin-bottom: 2px;
    }

    .newsletter-detail-value {
      font-size: 13px;
      color: var(--text-primary);
      word-break: break-word;
    }

    .newsletter-prompt {
      background: var(--bg-secondary);
      padding: 14px;
      border-radius: 10px;
      border-left: 3px solid var(--accent);
      margin-bottom: 16px;
    }

    .newsletter-prompt-label {
      font-size: 10px;
      text-transform: uppercase;
      letter-spacing: 0.5px;
      color: var(--text-muted);
      margin-bottom: 6px;
    }

    .newsletter-prompt-text {
      font-size: 13px;
      color: var(--text-secondary);
      line-height: 1.5;
      white-space: pre-wrap;
      max-height: 150px;
      overflow-y: auto;
    }

    .newsletter-actions {
      display: flex;
      justify-content: flex-end;
      gap: 8px;
    }

    .newsletter-action-btn {
      padding: 8px 14px;
      border-radius: 8px;
      font-size: 12px;
      cursor: pointer;
      transition: all 0.2s;
      border: 1px solid var(--border);
      background: transparent;
      color: var(--text-secondary);
    }
    .newsletter-action-btn:hover { background: var(--bg-secondary); color: var(--text-primary); }
    .newsletter-action-btn.delete:hover { background: rgba(239, 68, 68, 0.2); color: var(--danger); border-color: var(--danger); }

    .newsletter-collapse-btn {
      width: 100%;
      margin-top: 12px;
      padding: 8px;
      background: transparent;
      border: 1px solid var(--border);
      border-radius: 8px;
      color: var(--text-muted);
      font-size: 12px;
      cursor: pointer;
      transition: all 0.2s;
    }
    .newsletter-collapse-btn:hover { background: var(--bg-secondary); color: var(--text-primary); }

    /* Newsletter Modal */
    .newsletter-modal-overlay {
      display: none;
      position: fixed;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: rgba(0, 0, 0, 0.7);
      z-index: 600;
      justify-content: center;
      align-items: center;
      padding: 16px;
    }
    .newsletter-modal-overlay.open { display: flex; }

    .newsletter-modal {
      background: var(--bg-secondary);
      border: 1px solid var(--border);
      border-radius: 20px;
      width: 100%;
      max-width: 600px;
      max-height: 90vh;
      overflow-y: auto;
    }

    .newsletter-modal-header {
      padding: 20px 24px;
      border-bottom: 1px solid var(--border);
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .newsletter-modal-title {
      font-size: 18px;
      font-weight: 600;
    }

    .newsletter-modal-close {
      background: none;
      border: none;
      color: var(--text-muted);
      font-size: 24px;
      cursor: pointer;
    }

    .newsletter-modal-body {
      padding: 24px;
    }

    .newsletter-form-group {
      margin-bottom: 20px;
    }

    .newsletter-form-label {
      display: block;
      font-size: 13px;
      font-weight: 500;
      color: var(--text-secondary);
      margin-bottom: 8px;
    }

    .newsletter-form-input,
    .newsletter-form-textarea,
    .newsletter-form-select {
      width: 100%;
      padding: 12px 14px;
      background: var(--bg-primary);
      border: 1px solid var(--border);
      border-radius: 10px;
      color: var(--text-primary);
      font-size: 14px;
    }
    .newsletter-form-input:focus,
    .newsletter-form-textarea:focus,
    .newsletter-form-select:focus {
      outline: none;
      border-color: var(--accent);
    }

    .newsletter-form-textarea {
      min-height: 120px;
      resize: vertical;
      font-family: inherit;
    }

    .newsletter-form-row {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 16px;
    }

    .newsletter-modal-footer {
      padding: 16px 24px;
      border-top: 1px solid var(--border);
      display: flex;
      justify-content: flex-end;
      gap: 12px;
    }

    .newsletter-modal-btn {
      padding: 10px 20px;
      border-radius: 8px;
      font-size: 14px;
      font-weight: 500;
      cursor: pointer;
      transition: all 0.2s;
    }

    .newsletter-modal-btn.cancel {
      background: transparent;
      border: 1px solid var(--border);
      color: var(--text-secondary);
    }
    .newsletter-modal-btn.cancel:hover { background: var(--bg-card); }

    .newsletter-modal-btn.save {
      background: var(--accent);
      border: none;
      color: white;
    }
    .newsletter-modal-btn.save:hover { opacity: 0.9; }

    /* Responsive newsletters */
    @media (max-width: 768px) {
      .page-header-actions { flex-wrap: wrap; }
      .add-btn { padding: 8px 12px; font-size: 12px; }
      
      .newsletters-container { 
        max-height: calc(100vh - 180px);
        gap: 10px;
      }
      
      .newsletter-card { padding: 14px 16px; }
      
      .newsletter-compact {
        flex-wrap: wrap;
        gap: 12px;
      }
      
      .newsletter-icon { font-size: 24px; }
      
      .newsletter-main-info {
        flex: 1;
        min-width: 120px;
      }
      
      .newsletter-name { font-size: 14px; }
      .newsletter-email { font-size: 12px; }
      
      .newsletter-schedule-compact {
        align-items: flex-start;
      }
      
      .newsletter-schedule-time { font-size: 13px; }
      
      .newsletter-compact-right {
        width: 100%;
        justify-content: space-between;
        padding-top: 8px;
        border-top: 1px solid var(--border);
        margin-top: 4px;
      }
      
      .newsletter-last-sent { 
        max-width: none;
        text-align: left;
      }
      
      .newsletter-details-grid {
        grid-template-columns: 1fr;
      }
      
      .newsletter-form-row { grid-template-columns: 1fr; }
      
      .newsletter-modal { max-height: 85vh; }
      .newsletter-modal-header { padding: 16px 20px; }
      .newsletter-modal-body { padding: 20px; }
    }
    
    @media (max-width: 380px) {
      .newsletter-card { padding: 12px 14px; }
      .newsletter-icon { font-size: 22px; }
      .newsletter-name { font-size: 13px; }
      .newsletter-toggle { width: 40px; height: 22px; }
      .newsletter-toggle::after { width: 18px; height: 18px; }
      .newsletter-toggle.enabled::after { left: 20px; }
    }
  </style>
</head>
