              ${!isSkillFile ? '<button class="edit-btn" id="editBtn" onclick="enterEditMode()"> Edit</button>' : '<span style="font-size:11px;color:var(--text-muted);">Read-only</span>'}
            </div>
          </div>
          <div class="markdown-content" id="markdownContent"></div>
        `;

        // Render markdown
        const contentEl = document.getElementById('markdownContent');
        contentEl.innerHTML = marked.parse(data.content);

        // Highlight code blocks
        contentEl.querySelectorAll('pre code').forEach(block => {
          hljs.highlightElement(block);
        });
