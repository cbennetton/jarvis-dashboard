            padding: 12,
            callbacks: {
              label: function(context) {
                const value = context.raw || 0;
                if (usageViewMode === 'tokens') {
                  return `${context.dataset.label}: ${formatTokens(value)}`;
                } else {
                  return `${context.dataset.label}: ${value.toFixed(4)}`;
                }
              }
            }
          }
        }
      };

      usageDistributionChart = new Chart(ctx, {
        type: 'line',
        data: { labels: [], datasets: [] },
        options: chartOpts
      });
    }

    function renderUsageChart() {
      if (!usageDistributionChart) {
        initUsageChart();
      }
      if (!usageDistributionChart || !usageData || !usageData.timeSeries) return;

      // Get unique models from the data
      const models = filterInternalModels(usageData.models);
      const modelIds = models.map(([id]) => id);
      
      // Format dates for X-axis labels (e.g., "Feb 1")
      const labels = usageData.timeSeries.map(entry => {
        const date = new Date(entry.date);
        return date.toLocaleDateString('en-US', { month: 'short', day: 'numeric' });
      });

      // Create datasets for each model
      const datasets = models.map(([modelId, modelInfo]) => {
        const data = usageData.timeSeries.map(entry => {
          const modelData = entry[modelId];
          if (!modelData) return 0;
          return usageViewMode === 'tokens' ? modelData.tokens : modelData.cost;
        });

        return {
          label: modelInfo.displayName,
          data: data,
          borderColor: modelInfo.color,
          backgroundColor: modelInfo.color + '20',
          fill: true,
          tension: 0.4,
          borderWidth: 2,
          pointRadius: 0,
          pointHoverRadius: 5,
          pointHoverBackgroundColor: modelInfo.color,
          pointHoverBorderColor: '#fff',
          pointHoverBorderWidth: 2
        };
      });

      usageDistributionChart.data.labels = labels;
      usageDistributionChart.data.datasets = datasets;
      usageDistributionChart.update('none');
    }

    function renderModelCards() {
      const grid = document.getElementById('usageModelsGrid');
      const models = filterInternalModels(usageData.models)
        .sort((a, b) => b[1].totalTokens - a[1].totalTokens);

      if (!models.length) {
        grid.innerHTML = `
          <div class="empty-state">
            <div class="empty-state-icon"></div>
            <p>No usage data for this period</p>
          </div>`;
        return;
      }

      const maxValue = usageViewMode === 'tokens'
        ? Math.max(...models.map(([, d]) => d.totalTokens))
        : Math.max(...models.map(([, d]) => d.costEur));

      grid.innerHTML = models.map(([modelId, data]) => {
        const compactValue = usageViewMode === 'tokens' 
          ? formatTokensShort(data.totalTokens)
          : `${data.costEur.toFixed(2)}`;
        const percentage = usageViewMode === 'tokens'
          ? data.percentage.toFixed(1)
          : data.costPercentage.toFixed(1);
        const progressWidth = usageViewMode === 'tokens'
          ? (maxValue > 0 ? (data.totalTokens / maxValue * 100) : 0)
          : (maxValue > 0 ? (data.costEur / maxValue * 100) : 0);

        return `
          <div class="usage-model-card" style="--model-color: ${data.color}" data-model="${modelId}" onclick="toggleModelCard(this)">
            <div class="usage-model-header">
              <div class="usage-model-emoji">${data.emoji}</div>
              <div class="usage-model-info">
                <div class="usage-model-name">${esc(data.displayName)}</div>
                <div class="usage-model-calls">${data.calls.toLocaleString()} calls</div>
              </div>
              <div class="usage-model-compact-stats">
                <div class="usage-model-compact-value">${compactValue}</div>
                <div class="usage-model-percentage">${percentage}%</div>
              </div>
            </div>
            <div class="usage-model-progress">
              <div class="usage-model-progress-fill" style="width: ${progressWidth}%"></div>
            </div>
            <div class="usage-model-expand-hint">Click to expand</div>
            <div class="usage-model-details">
              <div class="usage-model-breakdown">
                <div class="usage-breakdown-item">
                  <div class="usage-breakdown-item-label">Input</div>
                  <div class="usage-breakdown-item-value">${formatTokensShort(data.input)}</div>
                </div>
                <div class="usage-breakdown-item">
                  <div class="usage-breakdown-item-label">Output</div>
                  <div class="usage-breakdown-item-value">${formatTokensShort(data.output)}</div>
                </div>
                <div class="usage-breakdown-item">
                  <div class="usage-breakdown-item-label">Cache Read</div>
                  <div class="usage-breakdown-item-value">${formatTokensShort(data.cacheRead)}</div>
                </div>
                <div class="usage-breakdown-item">
                  <div class="usage-breakdown-item-label">Cache Write</div>
                  <div class="usage-breakdown-item-value">${formatTokensShort(data.cacheWrite)}</div>
                </div>
              </div>
              <button class="usage-model-collapse-btn" onclick="event.stopPropagation(); collapseModelCard(this.closest('.usage-model-card'))"> Collapse</button>
            </div>
          </div>
        `;
      }).join('');
    }

    function toggleModelCard(card) {
      if (card.classList.contains('expanded')) return; // Let the collapse button handle it
      card.classList.add('expanded');
    }

    function collapseModelCard(card) {
      card.classList.remove('expanded');
    }

    function renderUsageBreakdown() {
      const container = document.getElementById('usageBreakdown');
      const models = filterInternalModels(usageData.models)
        .sort((a, b) => b[1].totalTokens - a[1].totalTokens);

      if (!models.length) {
        container.innerHTML = `
          <div class="empty-state">
            <div class="empty-state-icon"></div>
            <p>No breakdown available</p>
          </div>`;
        return;
      }

      const maxTokens = Math.max(...models.map(([, d]) => d.totalTokens));

      container.innerHTML = models.map(([modelId, data]) => {
        const barWidth = maxTokens > 0 ? (data.totalTokens / maxTokens * 100) : 0;
        
        return `
          <div class="usage-breakdown-row">
            <div class="usage-breakdown-row-emoji">${data.emoji}</div>
            <div class="usage-breakdown-row-info">
              <div class="usage-breakdown-row-name">${esc(data.displayName)}</div>
              <div class="usage-breakdown-row-bar">
                <div class="usage-breakdown-row-bar-fill" style="width: ${barWidth}%; background: ${data.color}"></div>
              </div>
            </div>
            <div class="usage-breakdown-row-values">
              <div class="usage-breakdown-row-tokens">${formatTokens(data.totalTokens)}</div>
              <div class="usage-breakdown-row-cost">${data.costEur.toFixed(2)}</div>
            </div>
          </div>
        `;
      }).join('');
    }

    function formatTokens(num) {
      if (num >= 1000000) return (num / 1000000).toFixed(2) + 'M';
      if (num >= 1000) return (num / 1000).toFixed(1) + 'K';
      return num.toLocaleString();
    }

    function formatTokensShort(num) {
      if (num >= 1000000) return (num / 1000000).toFixed(1) + 'M';
      if (num >= 1000) return (num / 1000).toFixed(0) + 'K';
      return num.toLocaleString();
    }

    // Period toggle
    document.querySelectorAll('.period-btn').forEach(btn => {
      btn.addEventListener('click', () => {
        document.querySelectorAll('.period-btn').forEach(b => b.classList.remove('active'));
        btn.classList.add('active');
        usagePeriodDays = parseInt(btn.dataset.days);
        loadUsage();
      });
    });

    // View toggle - also updates chart
    document.querySelectorAll('.view-toggle-btn').forEach(btn => {
      btn.addEventListener('click', () => {
        document.querySelectorAll('.view-toggle-btn').forEach(b => b.classList.remove('active'));
        btn.classList.add('active');
        usageViewMode = btn.dataset.view;
        renderUsage(); // This now updates chart too
      });
    });

    document.getElementById('refreshUsage').addEventListener('click', () => loadUsage());

    // ==================== UTILITIES ====================
    function esc(t) {
      const d = document.createElement('div');
      d.textContent = t;
      return d.innerHTML;
    }

    function formatSize(bytes) {
      if (bytes < 1024) return bytes + ' B';
      if (bytes < 1024 * 1024) return (bytes / 1024).toFixed(1) + ' KB';
      return (bytes / (1024 * 1024)).toFixed(1) + ' MB';
    }

    function getFileIcon(filename) {
      if (filename.endsWith('.md')) return '';
      if (filename.endsWith('.json')) return '';
      if (filename.endsWith('.js')) return '';
      if (filename.endsWith('.py')) return '';
      if (filename.endsWith('.sh')) return '';
      return '';
    }

    // ==================== INIT ====================
    checkAuth();
  </script>
</body>
</html>
