        container.innerHTML = '<div class="empty-state"><div class="empty-state-icon"></div><p>No markdown files found</p></div>';
        return;
      }

      const rootFiles = markdownFiles.filter(f => f.category === 'root');
      const memoryFiles = markdownFiles.filter(f => f.category === 'memory');

      let html = '';

      if (rootFiles.length) {
        html += '<div class="file-category"><div class="file-category-title"> Workspace Root</div>';
