  <script>
    // ==================== INITIALIZATION ====================
    let hourlyChart, dailyChart;
    let currentMonth = new Date();
    let allActivities = [];
    let currentMarkdownHash = '';
    let currentSkillsHash = '';
    let changeCheckInterval = null;

    const loginScreen = document.getElementById('loginScreen');
    const dashboard = document.getElementById('dashboard');
    const tooltip = document.getElementById('tooltip');
    const sidebar = document.getElementById('sidebar');
    const sidebarOverlay = document.getElementById('sidebarOverlay');

    // ==================== AUTH ====================
    async function checkAuth() {
      try {
        const res = await fetch('/api/auth-check', { credentials: 'same-origin' });
        const data = await res.json();
        if (data.authenticated) {
          showDashboard();
        }
      } catch (e) {
        console.log('Auth check failed, showing login');
      }
    }

    document.getElementById('logoutBtn').addEventListener('click', async () => {
      try {
        await fetch('/api/logout', { method: 'POST', credentials: 'same-origin' });
      } catch(e) {}
      location.reload();
    });

    function showDashboard() {
      loginScreen.style.display = 'none';
      dashboard.style.display = 'block';
      initCharts();
      initChartToggle();
      renderCalendar();
      loadData();
      // Poll status every 10 seconds for real-time updates
      setInterval(loadData, 10000);
      startChangeDetection();
    }

    // ==================== SIDEBAR ====================
    document.getElementById('hamburgerBtn').addEventListener('click', () => {
      sidebar.classList.add('open');
      sidebarOverlay.classList.add('open');
    });

    document.getElementById('sidebarClose').addEventListener('click', closeSidebar);
    sidebarOverlay.addEventListener('click', closeSidebar);

    function closeSidebar() {
      sidebar.classList.remove('open');
      sidebarOverlay.classList.remove('open');
    }

    // Navigation
    document.querySelectorAll('.nav-item').forEach(item => {
      item.addEventListener('click', () => {
        const page = item.dataset.page;
        navigateToPage(page);
        closeSidebar();
      });
    });

    function navigateToPage(pageName) {
      // Update nav items
      document.querySelectorAll('.nav-item').forEach(n => n.classList.remove('active'));
      document.querySelector(`.nav-item[data-page="${pageName}"]`).classList.add('active');

      // Update pages
      document.querySelectorAll('.page').forEach(p => p.classList.remove('active'));
      document.getElementById(`${pageName}Page`).classList.add('active');

      // Update header title
      const titles = { home: 'Dashboard', calendar: 'Activity Calendar', repositories: 'Repositories', markdowns: 'Markdown Files', skills: 'Skills', newsletters: 'Newsletters', usage: 'API Usage' };
      document.getElementById('headerPageTitle').textContent = titles[pageName] || 'Dashboard';

      // Load page content
      if (pageName === 'calendar') initCalendarPage();
      if (pageName === 'repositories') loadRepositoriesPage();
      if (pageName === 'markdowns') loadMarkdowns();
      if (pageName === 'skills') loadSkills();
      if (pageName === 'newsletters') loadNewsletters();
      if (pageName === 'usage') loadUsage();
    }

    // ==================== CHARTS ====================
    function initChartToggle() {
      document.querySelectorAll('.chart-toggle-btn').forEach(btn => {
        btn.addEventListener('click', () => {
          document.querySelectorAll('.chart-toggle-btn').forEach(b => b.classList.remove('active'));
          btn.classList.add('active');
          const chart = btn.dataset.chart;
          document.getElementById('hourlyChartContainer').style.display = chart === 'hourly' ? 'block' : 'none';
          document.getElementById('dailyChartContainer').style.display = chart === 'daily' ? 'block' : 'none';
        });
      });
    }

    function initCharts() {
      const chartOpts = {
        responsive: true,
        maintainAspectRatio: false,
        plugins: { legend: { display: false } },
        scales: {
          x: { grid: { color: 'rgba(255,255,255,0.05)' }, ticks: { color: 'rgba(255,255,255,0.5)' } },
          y: { grid: { color: 'rgba(255,255,255,0.05)' }, ticks: { color: 'rgba(255,255,255,0.5)' }, beginAtZero: true }
        }
      };

      hourlyChart = new Chart(document.getElementById('hourlyChart'), {
        type: 'bar',
        data: { labels: [], datasets: [{ data: [], backgroundColor: 'rgba(16, 185, 129, 0.6)', borderColor: 'rgba(16, 185, 129, 1)', borderWidth: 1, borderRadius: 4 }] },
        options: chartOpts
      });

      dailyChart = new Chart(document.getElementById('dailyChart'), {
        type: 'line',
        data: { labels: [], datasets: [{ data: [], borderColor: 'rgba(59, 130, 246, 1)', backgroundColor: 'rgba(59, 130, 246, 0.1)', fill: true, tension: 0.4 }] },
        options: chartOpts
      });
    }

    // ==================== DATA LOADING ====================
    let statusPollInterval = null;

    async function loadData() {
      try {
        const [enhancedStatusRes, statsRes, activitiesRes] = await Promise.all([
          fetch('/api/enhanced-status', { credentials: 'same-origin' }),
          fetch('/api/stats', { credentials: 'same-origin' }),
          fetch('/api/activities?hours=720', { credentials: 'same-origin' })
        ]);

        if (enhancedStatusRes.status === 401) { location.reload(); return; }

        const enhancedStatus = await enhancedStatusRes.json();
        const stats = await statsRes.json();
        allActivities = await activitiesRes.json();

        updateEnhancedStatus(enhancedStatus);
        updateStats(stats);
        updateCharts(stats);
        updateActivityList(allActivities);
        
        // Update calendar page if visible
        if (document.getElementById('calendarPage').classList.contains('active')) {
          renderCalendarPage();
        }
      } catch (e) {
        console.error('Load failed:', e);
      }
    }

    function updateEnhancedStatus(data) {
      const { main, subagents } = data;
      
      // Update main agent status
      const avatar = document.getElementById('mainAgentAvatar');
      const badge = document.getElementById('mainAgentBadge');
      const task = document.getElementById('mainAgentTask');
      const meta = document.getElementById('mainAgentMeta');
      
      if (main.active) {
        avatar.className = 'agent-avatar active';
        badge.className = 'agent-status-badge active';
        badge.textContent = 'Active';
        task.textContent = main.task || 'Working...';
        const elapsed = Math.round((Date.now() - main.startedAt) / 60000);
        meta.textContent = `Working for ${elapsed} minute${elapsed !== 1 ? 's' : ''}`;
      } else if (main.timedOut) {
        avatar.className = 'agent-avatar timedout';
        badge.className = 'agent-status-badge timedout';
        badge.textContent = 'Stale';
        task.textContent = main.task || 'Last task';
        meta.textContent = 'Status not updated recently';
      } else {
        avatar.className = 'agent-avatar idle';
        badge.className = 'agent-status-badge idle';
        badge.textContent = 'Idle';
        task.textContent = 'No active tasks';
        meta.textContent = 'Waiting for work...';
      }
      
      // Update sub-agents
      const countEl = document.getElementById('subagentsCount');
      const listEl = document.getElementById('subagentsList');
      
      const activeSubagents = subagents.filter(s => s.status === 'active');
      const recentSubagents = subagents.filter(s => s.status === 'completed').slice(0, 3);
      const allDisplayed = [...activeSubagents, ...recentSubagents];
      
      countEl.textContent = activeSubagents.length;
      
      if (allDisplayed.length === 0) {
        listEl.innerHTML = '<div class="no-subagents">No active sub-agents</div>';
      } else {
        listEl.innerHTML = allDisplayed.map(agent => {
          const durationMs = agent.duration || 0;
          const durationMin = Math.round(durationMs / 60000);
          const durationText = durationMin > 0 ? `${durationMin}m` : '<1m';
          
          const isActive = agent.status === 'active';
          const outcomeHtml = !isActive && agent.outcome 
            ? `<span class="subagent-outcome ${agent.outcome === 'ok' ? 'ok' : 'error'}">${agent.outcome === 'ok' ? '' : ''}</span>`
            : '';
          
          return `
            <div class="subagent-item ${isActive ? '' : 'completed'}">
              <div class="subagent-indicator ${isActive ? 'active' : 'completed'}"></div>
              <div class="subagent-info">
                <div class="subagent-id"> ${agent.id}</div>
                <div class="subagent-task">${esc(agent.task)}</div>
              </div>
              <div class="subagent-duration">${durationText}</div>
              ${outcomeHtml}
            </div>
          `;
        }).join('');
      }
      
      // Pulse the refresh indicator
      const refreshIndicator = document.getElementById('statusRefreshIndicator');
      refreshIndicator.style.animation = 'none';
      setTimeout(() => refreshIndicator.style.animation = '', 10);
    }

