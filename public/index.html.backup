      0%, 100% { opacity: 1; }
      50% { opacity: 0.4; }
    }

    .subagent-info {
      flex: 1;
      min-width: 0;
    }

    .subagent-id {
      font-size: 11px;
      font-family: 'JetBrains Mono', monospace;
      color: var(--text-muted);
      margin-bottom: 2px;
    }

    .subagent-task {
      font-size: 13px;
      color: var(--text-primary);
      white-space: nowrap;
      overflow: hidden;
      text-overflow: ellipsis;
